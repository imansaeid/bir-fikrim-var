@model UserProfileDto

@{
    ViewData["Title"] = "Profile";
}

<div class="container py-4">

    <div class="card text-center bg-dark text-white mb-5 shadow">
        <div class="card-body p-4">
            <i class="bi bi-person-circle" style="font-size: 4rem;"></i>
            <h1 class="display-5 mt-2 mb-1">@Model.User.FullName</h1>
            <p class="lead text-info">
                <i class="bi bi-envelope-fill me-2"></i>@Model.User.Email
            </p>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="border-bottom border-secondary pb-2">
            @(Model.IsOwnProfile ? "My Ideas" : $"{Model.User.FullName}'s Ideas")
        </h2>
        @if (Model.IsOwnProfile)
        {
            <a asp-controller="Ideas" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle-fill me-2"></i>Post a New Idea
            </a>
        }
    </div>

    @if (!Model.Ideas.Any())
    {
        <div class="text-center p-5 rounded-3 bg-secondary">
            <h4>No Ideas Yet</h4>
            <p class="lead text-muted">This user hasn't posted any ideas.</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var idea in Model.Ideas)
            {
                <div class="col">
                    <div class="card border-info h-100">
                        <div class="card-header bg-info bg-opacity-25">
                            <h5 class="card-title text-white mb-0">@idea.Title</h5>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <p class="card-text flex-grow-1">@idea.Content</p>
                            <small class="text-muted">
                                Posted on @idea.CreatedDate?.ToString("D")
                            </small>
                        </div>
                        <div class="card-footer bg-dark d-flex justify-content-between align-items-center">
                            <div class="d-flex gap-3">
                                <span class="badge rounded-pill bg-danger bg-opacity-50 px-2 py-1">
                                    <i class="bi bi-heart-fill me-1"></i>@idea.LikeCount
                                </span>
                                <span class="badge rounded-pill bg-primary bg-opacity-50 px-2 py-1">
                                    <i class="bi bi-chat-dots-fill me-1"></i>@idea.CommentCount
                                </span>
                            </div>
                            <div>
                                <a asp-controller="Ideas" asp-action="Details" asp-route-id="@idea.IdeaId"
                                   class="btn btn-sm btn-outline-primary" title="View Details">
                                    <i class="bi bi-eye"></i> View
                                </a>

                                @if (Model.IsOwnProfile)
                                {
                                    <a asp-controller="Ideas" asp-action="Edit" asp-route-id="@idea.IdeaId"
                                       class="btn btn-sm btn-outline-warning" title="Edit Idea">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-danger" title="Delete Idea"
                                            data-bs-toggle="modal" data-bs-target="#deleteModal-@idea.IdeaId">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model.IsOwnProfile)
                {
                    <div class="modal fade" id="deleteModal-@idea.IdeaId" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Confirm Deletion</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to delete the idea titled
                                    "<strong>@idea.Title</strong>"? This action cannot be undone.
                                </div>
                                <div class="modal-footer">
                                    <form asp-controller="Ideas" asp-action="Delete" asp-route-id="@idea.IdeaId" method="post">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-danger">Delete Idea</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    }
</div>
