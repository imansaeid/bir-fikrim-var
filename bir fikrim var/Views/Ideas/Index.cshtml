@model IEnumerable<IdeaDto>

@{
    ViewData["Title"] = "Ideas Feed";
}

<div class="container" style="max-width: 650px;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="mb-0">Ideas Feed 📰</h4>

        <form method="get" asp-controller="Ideas" asp-action="Index">
            <select name="sortBy" class="form-select form-select-sm" onchange="this.form.submit()">
                <option value="newest" selected="@("newest" == (string)ViewBag.SortBy)">Newest</option>
                <option value="likes" selected="@("likes" == (string)ViewBag.SortBy)">Most Liked</option>
                <option value="comments" selected="@("comments" == (string)ViewBag.SortBy)">Most Commented</option>
            </select>
        </form>
    </div>

    @if (Model != null && Model.Any())
    {
        foreach (var idea in Model)
        {
            @Html.Partial("_IdeaCard", idea)
        }
    }
    else
    {
        <div class="alert alert-light border text-center">
            No ideas yet. Be the first to
            <a asp-controller="Ideas" asp-action="Create">post one!</a>
        </div>
    }
</div>
