@model List<IdeaDto>

@{
    ViewData["Title"] = "Ideas Feed";
}

<h2>All Ideas</h2>

@if (!Model.Any())
{
    <p>No ideas posted yet.</p>
}
else
{
    <div class="list-group">
        @foreach (var idea in Model)
        {
            <div class="list-group-item mb-3 shadow-sm">
                <h4>@idea.Title</h4>
                <p>@(idea.Content.Length > 100 ? idea.Content.Substring(0, 100) + "..." : idea.Content)</p>
                <small>
                    Posted on @idea.CreatedDate?.ToString("g")
                </small>
                <br />
                <a asp-action="Details" asp-route-id="@idea.IdeaId" class="btn btn-sm btn-primary mt-2">View Details</a>
            </div>
        }
    </div>
}
