@model IEnumerable<IdeaDto>

@{
    ViewData["Title"] = "Ideas Feed";
}

<h2>Ideas Feed</h2>

@foreach (var idea in Model)
{
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">@idea.Title</h5>
            <p class="card-text">@idea.Content.Substring(0, Math.Min(100, idea.Content.Length))...</p>
            <p class="card-text">
                <small class="text-muted">By @idea.AuthorName on @idea.CreatedDate.("g")</small>
            </p>

            <p>
                👍 @idea.LikeCount &nbsp;&nbsp;
                💬 @idea.CommentCount
            </p>

            <a asp-action="Details" asp-route-id="@idea.IdeaId" class="btn btn-primary">View Details</a>

            @if (Context.Session.GetInt32("UserId") != null)
            {
                <form asp-action="ToggleLike" method="post" style="display:inline;">
                    <input type="hidden" name="ideaId" value="@idea.IdeaId" />
                    <button type="submit" class="btn btn-outline-success">Like</button>
                </form>
            }
        </div>
    </div>
}
